<%= form_for(@project) do |f| %>
	<div class="row">
		<div class=" medium-2 columns">
			<%= f.label :title %>
		</div>
		<div class=" medium-10 columns">
			<%= f.text_field :title %>
		</div>
	</div>
	<div class="row">
		<div class=" medium-2 columns">
			<%= f.label :description %>
		</div>
		<div class=" medium-10 columns">
			<%= f.text_area :description %>
		</div>
		</div>
	<div class="row">
		<div class=" medium-2 columns">
			<%= f.label :start_date %>
		</div>
		<div class=" medium-10 columns">
			<%= f.text_field :start_date %>
		</div>
		</div>

		<div class="row">
			<div class="medium-2 columns"><%= f.submit "Neues Projekt erstellen", class: "butten success" %></div>
			<div class="medium-10 columns">&nbsp;</div>
		</div>
<% end %>

