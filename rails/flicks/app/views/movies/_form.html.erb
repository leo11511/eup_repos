<%= form_for(@movie) do |f| %>
	<div class="row">
		<div class="medium-2 columns">
		<%= f.label :title %>
	</div>
	<div class="medium-10 columns">
		<%= f.text_field :title %>
	</div>
	</div>
	<div class="row">
		<div class="medium-2 columns">
		<%= f.label :description %>
	</div>
	<div class="medium-10 columns">
		<%= f.text_area :description %>
	</div>
	</div>
	<div class="row">
		<div class="medium-2 columns">
		<%= f.label :rating %>
	</div>
	<div class="medium-10 columns">
		<%= f.text_field :rating %>
	</div>
	</div>
	<div class="row">
		<div class="medium-2 columns">
		<%= f.label :total_gross %>	
	</div>
	<div class="medium-10 columns">
		<%= f.number_field :total_gross %>
	</div>
	</div>
	<div class="row">
		<div class="medium-2 columns">
		<%= f.label :realised_on %>	
	</div>
	<div class="medium-10 columns">
		<%= f.datetime_select :realised_on%>
	</div>
	</div>
	<div class="row">
		<div class="medium-2 columns"><%= f.submit %></div>
		<div class="medium-10 columns">&nbsp;</div>
	</div>
<% end %>

